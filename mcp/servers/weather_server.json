{
  "name": "weather_server",
  "description": "Production-ready weather information server providing current weather data and forecasts",
  "version": "1.0.0",
  "author": "Weather Service Team",
  "license": "MIT",
  "server": {
    "command": "python",
    "args": [
      "../../servers/weather_server.py"
    ],
    "cwd": "${MCP_SERVER_ROOT}/mcp/servers",
    "env": {
      "WEATHER_API_KEY": "${WEATHER_API_KEY}",
      "WEATHER_API_BASE_URL": "${WEATHER_API_BASE_URL:-https://api.openweathermap.org/data/2.5}",
      "WEATHER_DEFAULT_UNITS": "${WEATHER_DEFAULT_UNITS:-metric}",
      "WEATHER_CACHE_TTL": "${WEATHER_CACHE_TTL:-300}"
    }
  },
  "capabilities": {
    "tools": [
      {
        "name": "get_current_weather",
        "description": "Get current weather information for a specific location",
        "parameters": {
          "type": "object",
          "properties": {
            "location": {
              "type": "string",
              "description": "The city and country (e.g., 'London, UK')"
            },
            "units": {
              "type": "string",
              "enum": ["metric", "imperial", "kelvin"],
              "description": "Temperature units (default: metric)"
            }
          },
          "required": ["location"]
        }
      },
      {
        "name": "get_weather_forecast",
        "description": "Get weather forecast for a specific location",
        "parameters": {
          "type": "object",
          "properties": {
            "location": {
              "type": "string",
              "description": "The city and country (e.g., 'London, UK')"
            },
            "days": {
              "type": "integer",
              "minimum": 1,
              "maximum": 7,
              "description": "Number of forecast days (1-7, default: 5)"
            },
            "units": {
              "type": "string",
              "enum": ["metric", "imperial", "kelvin"],
              "description": "Temperature units (default: metric)"
            }
          },
          "required": ["location"]
        }
      }
    ],
    "resources": [],
    "prompts": []
  },
  "configuration": {
    "required_env_vars": [
      "WEATHER_API_KEY"
    ],
    "optional_env_vars": [
      "WEATHER_API_BASE_URL",
      "WEATHER_DEFAULT_UNITS",
      "WEATHER_CACHE_TTL"
    ],
    "health_check": {
      "endpoint": "/health",
      "timeout": 5000
    }
  },
  "tags": ["weather", "api", "forecast", "climate"],
  "category": "data",
  "status": "active",
  "created_at": "2024-01-12T00:00:00Z",
  "updated_at": "2024-01-12T00:00:00Z"
}